<Window x:Class="HelpDesk.CreateIncidentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelpDesk"
        mc:Ignorable="d"
        Height="300" Width="300">
    <StackPanel>
        <Label>Введите заголовок проблемы</Label>
        <TextBox Name="tittleTb"/>
        <Label>Опишите проблему</Label>
        <TextBox Name="descriptionTb" TextWrapping="Wrap" Height="50"/>

        <Button Click="Button_Click">Добавить</Button>
    </StackPanel>
</Window>
